@model Business.Domain.Entities.People

@{ 
    ViewData["Title"] = "Register Page"; 
}

    <form asp-action="Index">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input class="form-control" asp-for="Age" />
            <span asp-validation-for="Age" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <input class="form-control" asp-for="Gender" />
            <span asp-validation-for="Gender" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="IDNumber"></label>
            <input class="form-control" asp-for="IDNumber" />
            <span asp-validation-for="IDNumber" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
